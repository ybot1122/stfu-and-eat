---
import { type CollectionEntry, getCollection, render } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import FormattedDate from "@components/FormattedDate.astro";
import { readingTime } from "@lib/utils";
import BackToPrevious from "@components/BackToPrevious.astro";
import PostNavigation from "@components/PostNavigation.astro";
import TableOfContents from "@components/TableOfContents.astro";
import Giscus from "@components/Giscus.astro";
import ExpandableImage from "@components/ExpandableImage.astro";

export async function getStaticPaths() {
  const posts = (await getCollection("recipes"))
    .filter((post) => !post.data.draft)
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
  return posts.map((post) => ({
    params: { id: post.id },
    props: post,
  }));
}
type Props = CollectionEntry<"recipes">;

const posts = (await getCollection("recipes"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

function getNextPost() {
  let postIndex;
  for (const post of posts) {
    if (post.id === Astro.params.id) {
      postIndex = posts.indexOf(post);
      return posts[postIndex + 1];
    }
  }
}

function getPrevPost() {
  let postIndex;
  for (const post of posts) {
    if (post.id === Astro.params.id) {
      postIndex = posts.indexOf(post);
      return posts[postIndex - 1];
    }
  }
}

const nextPost = getNextPost();
const prevPost = getPrevPost();

const post = Astro.props;
const { Content, headings } = await render(post);
---

<Layout title={post.data.title} description={post.data.description}>
  <Container>
    <div class="animate">
      <BackToPrevious href="/recipes">Back to recipes</BackToPrevious>
    </div>
    <div class="my-10 space-y-1">
      <div class="animate flex items-center gap-1.5">
        <div class="font-base text-sm">
          <FormattedDate date={post.data.date} />
        </div>
        &bull;
        {post.body && (
          <div class="font-base text-sm">
            {readingTime(post.body)}
          </div>
        )}        
      </div>
      <h1 class="animate text-3xl font-semibold text-black dark:text-white">
        {post.data.title}
      </h1>
      {
        post.data.tags && post.data.tags?.length > 0 ? (
          <div class="animate flex gap-2 pt-1 flex-wrap">
            {post.data.tags.map((tag) => (
              <a
                href={`/tags/${tag}`}
                class="rounded-sm border border-black/15 px-2 py-1 text-sm transition-colors duration-300 ease-in-out hover:bg-black/5 hover:text-black focus-visible:bg-black/5 focus-visible:text-black dark:border-white/20 dark:hover:bg-white/5 dark:hover:text-white dark:focus-visible:bg-white/5 dark:focus-visible:text-white"
              >
                {tag}
              </a>
            ))}
          </div>
        ) : null
      }
    </div>
    {headings.length > 0 && <TableOfContents headings={headings} />}
    <article class="animate">
      <section>
        <h2 id="ingredients">Ingredients</h2>
        <ul>
          {post.data.ingredients.map(([amount, unit, name]) => (
            <li class="ml-6 list-disc marker:text-black py-1.5 text-sm">
              {amount} {unit} {name}
            </li>
          ))}
        </ul>
      </section>
      <section id="instructions">
        <div class="flex items-center gap-3">
          <h2>Instructions</h2>
          <button
            id="toggle-images-btn"
            type="button"
            class="rounded-sm border border-black/15 px-2 mt-5 py-1 text-sm hover:bg-black/5 dark:border-white/20 dark:hover:bg-white/5"
            aria-pressed="false"
            aria-controls="instructions"
            aria-label="Toggle images in instructions"
          >
            Hide images
          </button>
        </div>

        <ol>
          {post.data.instructions.map(([instr, img]) => (
            <li class="ml-6 list-number marker:text-black py-1.5 text-sm">
              {instr}
              {img && <ExpandableImage src={img} alt={instr} />}
            </li>
          ))}
        </ol>
      </section>
      <style>
        /* Hide images when data-images-hidden is true */
        #instructions[data-images-hidden="true"] img {
          display: none !important;
        }
      </style>
      <script>
        (function () {
          const section = document.getElementById('instructions');
          const toggleBtn = document.getElementById('toggle-images-btn');
          if (!section || !toggleBtn) return;
          const images = section.querySelectorAll('.expandable-image');
          if (!images || images.length === 0) {
            // No images in this section: hide the toggle
            toggleBtn.style.display = 'none';
            return;
          }

          // Initial state - images are shown; restore from localStorage if set
          let imagesHidden = false;
          try {
            const stored = localStorage.getItem('hideInstrImages');
            if (stored !== null) imagesHidden = stored === 'true';
          } catch (_) {
            // ignore localStorage errors
          }

          function updateImages() {
            images.forEach((img) => {
              img.style.display = imagesHidden ? 'none' : '';
            });
          }

          updateImages();
          updateButton();

          function updateButton() {
            toggleBtn!.setAttribute('aria-pressed', imagesHidden ? 'true' : 'false');
            toggleBtn!.textContent = imagesHidden ? 'Show images' : 'Hide images';
            section!.setAttribute('data-images-hidden', imagesHidden ? 'true' : 'false');
          }

          toggleBtn.addEventListener('click', () => {
            imagesHidden = !imagesHidden;
            updateButton();
            updateImages();
            try { localStorage.setItem('hideInstrImages', imagesHidden ? 'true' : 'false'); } catch (_) {}
          });
        })();
      </script>
      <Content />
      <div class="mt-24">
        <PostNavigation prevPost={prevPost} nextPost={nextPost} />
      </div>
      <div class="mt-24">
        <Giscus />
      </div>
    </article>
  </Container>
</Layout>
